generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

//tabelas com seus respectivos campos
// ENUM para tipo de usuário
enum TipoUsuario {
  DOCENTE
  SUPERVISOR
  DIRETOR
}

model usuarios {
  UUID          String     @unique @default(uuid())
  id            Int        @id @unique @default(autoincrement())
  nome_usuario  String
  email_usuario String
  senha_cripto  String
  tipo_usuario  TipoUsuario  // agora é ENUM

  // Relação 1:N
  projetos      projetos[] // um usuário pode ter vários projetos
}

model projetos {
  UUID               String   @unique @default(uuid())
  id                 Int      @id @unique @default(autoincrement())
  nome_projeto       String
  descricao          String?  @default("sem descrição")
  membros_projeto    String
  turma_projeto      String
  data_criacao       DateTime? @default(now())
  data_apresentacao  String
  convidados         Boolean
  detalhesConvidados String? // permite ser null ou string vazia
  observacoes        String
  status_projeto     String?  @default("Pendente")
  updatedAt          DateTime? @default(now())
  createdAt          DateTime? @default(now())

  // FK para usuários
  usuarioId Int
  usuario   usuarios @relation(fields: [usuarioId], references: [id])
}
