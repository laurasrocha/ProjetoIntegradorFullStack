generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  UUID                String               @unique @default(uuid())
  id                  Int                  @id @unique @default(autoincrement())
  nome_usuario        String
  email_usuario       String               @unique
  senha_cripto        String
  tipo_usuario        TipoUsuario
  passwordResetTokens PasswordResetToken[]
  projetos            projetos[]
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  usuario   usuarios @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model projetos {
  UUID               String           @unique @default(uuid())
  id                 Int              @id @default(autoincrement())
  nome_projeto       String
  descricao          String?          @default("sem descrição")
  membros_projeto    String
  turma_projeto      String
  data_criacao       DateTime?        @default(now())
  data_apresentacao  String
  convidados         Boolean
  detalhesConvidados String?
  observacoes        String?
  feedback_supervisor String?
  status_projeto     String?          @default("Pendente")
  updatedAt          DateTime?        @default(now())
  createdAt          DateTime?        @default(now())
  usuarioId          Int?
  usuario            usuarios?        @relation(fields: [usuarioId], references: [id])
  projetos           ProjetoArquivo[]
}

model ProjetoArquivo {
  id        Int    @id @default(autoincrement())
  url       String
  tipo      String // "image", "pdf", etc
  projetoId Int

  projeto projetos @relation(fields: [projetoId], references: [id])
}

enum TipoUsuario {
  DOCENTE
  SUPERVISOR
  DIRETOR
}
